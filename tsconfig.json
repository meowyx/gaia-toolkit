      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "./scripts",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "sourceMap": true
